{
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "build:ci": "lerna run build",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "bump": "lerna version",
    "bootstrap": "lerna bootstrap",
    "test-visual": "chromatic",
    "clean": "lerna run clean --stream",
    "format": "prettier --write './**/*.{ts,tsx,js,md,json}'",
    "format:check": "prettier --list-different './**/*.{ts,tsx,js,md,json}'",
    "push": "lerna publish",
    "storybook": "start-storybook -p 5000"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@changesets/cli": "^2.9.1",
    "@storybook/html": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@types/node": "^14.0.13",
    "babel-loader": "^8.1.0",
    "chromatic": "^5.0.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5"
  }
}
